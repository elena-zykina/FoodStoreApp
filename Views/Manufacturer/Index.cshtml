@model IEnumerable<FoodStoreApp.Models.Manufacturer>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Производители</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Manufacturer" asp-action="Create" class="btn btn-primary">
                Создать
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Страна
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var manufacturer in Model)
                {
                    <tr>
                        <td width="30%">@manufacturer.Name</td>
                        <td width="10%">@manufacturer.Country</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Manufacturer" asp-route-Id="@manufacturer.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    Создать
                                </a>
                                <a asp-controller="Manufacturer" asp-route-Id="@manufacturer.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Нет действующих производителей </p>
    }

</div>
